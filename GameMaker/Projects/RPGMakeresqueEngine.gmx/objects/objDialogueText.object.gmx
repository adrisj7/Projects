            <string>/// IsFinished and Scroll text
if (_textIndex &gt;= string_length(_text)) {
    if keyboard_check_pressed( input_get("action") ) {
        _finished = true;
    }
} else {

    // Skip the scrolling of the dialogue. TODO: Is this how it's done?
    if keyboard_check_pressed( input_get("action") ) {
        _textIndex = string_length(_text) - 1;
    }

    var currentChar = string_char_at(_text, floor(_textIndex));
    var scrollSpeed = 0;
    // Note: == works for string comparison in GMS.
    if (currentChar == " ") {
        scrollSpeed = _spaceSpeed;
    } else if (currentChar == ",") {
        scrollSpeed = _commaSpeed;
    } else if (currentChar == ".") {
        scrollSpeed = _periodSpeed;
    } else {
        scrollSpeed = _charSpeed;
    }
    
    // If we're speeding up the text
    if keyboard_check( input_get("back")) {
        scrollSpeed *= _speedUpFactor;
    }

    _textIndex += scrollSpeed;
}
</string>
